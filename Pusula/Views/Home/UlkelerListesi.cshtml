
@{
    ViewBag.Title = Html.Raw("Ülkeler Listesi");
}
<h3 class="text-center">ÜLKELER LİSTESİ</h3>
<table class="table table-hover table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Ülke</th>
            <th>Diller</th>
        </tr>
    </thead>
    <tbody id="result">

    </tbody>
</table>    
<nav aria-label="Page navigation example">
    <ul class="pagination" id="pages">
    </ul>
</nav>

@{ 
    string syf = Request.QueryString["id"] != null ? Request.QueryString["id"].ToString() : "1";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            var sayfa = "@syf";
            FillCountries(sayfa,50);
        })
    </script>
    <script id="Template" type="text/x-jsrender">
        <tr>
            <td>{{:Id}}</td>
            <td>{{:Name}}</td>
            <td>{{:Languages}}</td>
        </tr>
    </script>
}